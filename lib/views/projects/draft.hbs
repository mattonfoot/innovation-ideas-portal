<div class="container">
  <div class="page-header">
    <h1>Basic details</h1>
  </div>

  <form method="post" action="/projects/{{{ draft._id }}}/draft">
    <div class="form-group">
      <label for="title">Project Title</label>
      <input type="text" class="form-control" name="title" id="title" placeholder="Project title..." value="{{{ draft.title }}}">
    </div>
    <div class="form-group">
      <label for="markdown">Description</label>
      <textarea class="form-control" name="markdown" id="markdown" placeholder="Descriptive summary...">{{{ draft.markdown }}}</textarea>
    </div>
    <div class="form-group">
      <label for="tags">Tags</label>
      <input type="text" class="form-control" name="tags" id="tags" placeholder="Comma seperated tag list..." value="{{{ draft.tags }}}">
    </div>

    {{> projectactions }}
  </form>
</div>
