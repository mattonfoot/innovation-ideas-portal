<head>
  <meta charset="UTF-8">
  <meta name="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="mattonfoot">
  <meta http-equiv="Content-Language" content="en">

  <title>{{title}}</title>

  <!--[if lt IE 9]>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
  <![endif]-->

  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet" media="screen">

  <style>
  .project-details {
    padding: 15px;
  }

  .project-creator {
    line-height: 20px;
  }
  .project-creator-heading {
    padding-bottom: 10px;
    border-bottom: 1px solid #ddd;
  }
  .project-creator-title {
    margin-top: 0;
    margin-bottom: 0;
    font-size: 18px;
    line-height: 25px;
    color: inherit;
  }
  .project-creator-user {
    margin-bottom: 0;
    font-size: 16px;
    color: #999;
  }
  .project-creator-submitted {
    margin-bottom: 0;
    font-size: 14px;
    color: #999;
  }

  /* Project Tile */
  .project-tile {
    line-height: 20px;
  }
  .grid > .grid-item:nth-child(4n+5) {
    clear: left;
  }

  .project-tile-heading {
    padding-bottom: 10px;
    border-bottom: 1px solid #ddd;
  }
  .project-tile-title {
    margin-top: 0;
    margin-bottom: 0;
    font-size: 18px;
    line-height: 25px;
    color: inherit;
  }

  .project-tile-summary {
    margin-top: 0;
    font-size: 14px;
    color: #666;
  }
  .project-tile-user {
    margin-bottom: 0;
    font-size: 16px;
    color: #999;
  }
  .project-tile-submitted {
    margin-bottom: 0;
    font-size: 14px;
    color: #999;
  }

  .project-tile-support {
    margin-top: 10px;
    margin-bottom: 10px;
    text-align: center;
  }
  .project-tile-support .supporters,
  .project-tile-support .deadline {
    float: left;
    width: 50%;
  }
  .project-tile-support .label { }
  .project-tile-support .count {
    line-height: 40px;
    font-size: 36px;
  }

  .project-tile-status {
    margin: 10px 15px 0;
    padding-top: 10px;
    border-top: 1px solid #ddd;
    text-align: center;
    font-weight: bold;
  }
  .project-tile-status .status {
    font-weight: normal;
  }

  .project-tile-actions {
    margin-top: 10px;
    margin-bottom: 10px;
    text-align: center;
  }

  .project-tags {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #dbdbdb;
  }
  .project-tags:before,
  .project-tags:after {
    content: " ";
    display: table;
  }

  .project-tags .project-tag-list {
    margin: 0;
    padding: 0;
  }
  .project-tags .project-tag-list:before,
  .project-tags .project-tag-list:after {
    content: " ";
    display: table;
  }

  .project-tags .project-tag-list li {
    padding: 3px 5px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    background: #bfc0c2;
    display: inline-block;
    zoom: 1;
    margin: 0 5px 10px 0;
    color: #fff;
  }
  </style>
</head>
